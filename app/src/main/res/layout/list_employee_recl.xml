<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/emp_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:text="Adarsh Rathore"
        app:layout_constraintStart_toEndOf="@+id/img1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/emp_relegion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RELIGION"
        app:layout_constraintEnd_toEndOf="@+id/emp_name"
        app:layout_constraintStart_toStartOf="@+id/emp_name"
        app:layout_constraintTop_toBottomOf="@+id/emp_name" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age: "
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/emp_age"
        app:layout_constraintTop_toTopOf="@+id/emp_name" />

    <TextView
        android:id="@+id/emp_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        android:textSize="18sp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <TextView
        android:id="@+id/emp_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FARIDABAD"
        app:layout_constraintEnd_toEndOf="@+id/emp_name"
        app:layout_constraintStart_toStartOf="@+id/emp_name"
        app:layout_constraintTop_toBottomOf="@+id/emp_relegion" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expertise: "
        android:layout_margin="10dp"
        android:drawableStart="@drawable/expert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img1" />

    <TextView
        android:id="@+id/emp_expertise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KNIT"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/textView5" />
</androidx.constraintlayout.widget.ConstraintLayout>